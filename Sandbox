/**
 *Sphero Bolt does a figure eight
*/
async function figureeight() {
	setSpeed(65);     // sets speed to 65
	setHeading(90);   // turns it to face 90 degrees
	setMainLed(getRandomColor());   // Sets the LEDs to show a random color
	await spin (-359,4)   // makes a circle 
	setMainLed(getRandomColor());
	await spin (359,4)   // makes a circle in the opposite direction
}

async function startProgram() {
	// Sets color to blue, moves forward
	setHeading(0);
    setMainLed({ r: 0, g: 50, b: 255});
    setSpeed(45);
    await delay (3);     // Sphero goes straight forward to make space for 3 seconds at speed 45
	for (var _i1 = 0; _i1 < 3; _i1++) {    // Loop for 3 times
		await figureeight();
	} // Does a figure8 3 times in a row
	setHeading(0); // resets direction
	setSpeed(0);   // stops bolt
}




